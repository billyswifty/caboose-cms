<h1>A/B Test Variants</h1>

<form action='/admin/ab-variants' method='get'>
  <table cellpadding='4' cellspacing='0' border='0'>
    <tr>
      <td>A/B Test Variant: </td>
      <td><input type='text' name='ab_variant' value='<%= @gen.params['name'] %>' style='width: 200px;' /></td>
    </tr>
  </table>
  <p><input type='submit' value='Search' /></p>
</form>

<% if (@variants.count > 0) %>

  <table class='data'>
    <tr><% raw @gen.sortable_table_headings({'name' => 'Variant Name'}) %></tr>
    <% @variants.each do |v| %>
      <tr onclick="window.location='/admin/ab-variants/:id';">
        <td><%= v.name %></td>
      </tr>
    <% end %>
  </table>
  <p><%= raw @gen.generate %></p>
<% else %>
  <p>No A/B variants found.</p>
<% end %>
