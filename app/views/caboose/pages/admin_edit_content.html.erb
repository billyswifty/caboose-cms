
<% content_for :caboose_css do %>
<style type='text/css'>
#back_to_admin {
  display: block;  
  color: #fff;
  background-image: url(/assets/caboose/caboose_logo_small.png);
  background-color: #000;  
  background-repeat: no-repeat;  
  padding: 14px 10px 14px 50px;
  position: absolute;
  top: 0px;
  left: 0px;
  z-index: 100;
}
.block_over { background: #fff799; }
</style>
<% end %>

<% content_for :caboose_js do %>
<%= javascript_include_tag "caboose/admin" %>
<%= javascript_include_tag "caboose/model/all" %>
<%= javascript_include_tag 'caboose/admin_page_edit_content' %>
<script type='text/javascript'>

var controller = false;
$(document).ready(function() {
  controller = new PageContentController(<%= @page.id %>);

  $('body').append($('<a/>')
    .attr('id', 'back_to_admin')      
    .attr('href', '/admin/pages/<%= @page.id %>/edit')
    .html("Back to Admin")      
  );  
});

</script>
<% end %>
